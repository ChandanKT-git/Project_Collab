# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Database Configuration
# Option 1: Use DATABASE_URL (Render/Railway/Heroku format)
DATABASE_URL=postgresql://user:password@host:5432/database

# Option 2: Use Railway's PostgreSQL variables (auto-set by Railway)
PGDATABASE=railway
PGUSER=postgres
PGPASSWORD=your-railway-password
PGHOST=containers-us-west-xxx.railway.app
PGPORT=5432


# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@projectportal.com

# Admin Configuration
ADMIN_EMAIL=admin@projectportal.com

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000

# AWS S3 Storage (Optional - for production file storage)
# Set USE_S3=True to enable AWS S3 for media and static files
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
